{
  "name": "payload-nextjs-boilerplate",
  "description": "A boilerplate project for NextJS with Payload CMS",
  "keywords": [
    "payload",
    "cms",
    "nextjs"
  ],
  "version": "0.0.1",
  "private": false,
  "license": "MIT",
  "author": "Innovixx",
  "scripts": {
    "build:next": "next build",
    "build:server": "tsc --project tsconfig.server.json",
    "build:payload": "payload build",
    "build": "cross-env NODE_ENV=production yarn build:payload && yarn build:server && cross-env NEXT_BUILD=true node dist/index.js",
    "dev": "node dev.js",
    "cleanDev": "rm -rf ./storage && cross-env PAYLOAD_DROP_DATABASE=true PAYLOAD_SEED_DATABASE=true yarn dev",
    "seed": "rm -rf ./storage && cross-env PAYLOAD_SEED_DATABASE=true yarn dev",
    "serve": "cross-env NODE_ENV=production node dist/index.js",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=payload.config.ts payload generate:types",
    "generate:graphQLSchema": "cross-env PAYLOAD_CONFIG_PATH=payload.config.ts payload generate:graphQLSchema"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "escape-html": "^1.0.3",
    "express": "^4.17.1",
    "jss": "^10.9.2",
    "jss-global": "^3.0.0",
    "next": "^13.0.5",
    "payload": "^1.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-jss": "^10.9.2",
    "slate": "^0.72.8"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/register": "^7.17.0",
    "@innovixx/eslint-config": "1.0.11",
    "@types/express": "^4.17.11",
    "@types/node": "^18.7.18",
    "@types/react": "^16.9.56",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.11.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.0"
  }
}
