{
  "name": "payload-nextjs-boilerplate",
  "description": "A boilerplate project for NextJS with Payload CMS",
  "keywords": [
    "payload",
    "cms",
    "nextjs"
  ],
  "version": "0.0.1",
  "private": false,
  "license": "MIT",
  "author": "Innovixx",
  "scripts": {
    "build:next": "next build",
    "build:server": "tsc --project tsconfig.server.json",
    "build:payload": "payload build",
    "build": "yarn copyfiles && cross-env NODE_ENV=production yarn build:payload && yarn build:server && cross-env NEXT_BUILD=true PAYLOAD_CONFIG_PATH=dist/payload.config.js node dist/server.js",
    "dev": "ts-node ./server.ts",
    "cleanDev": "rm -rf ./storage && cross-env PAYLOAD_DROP_DATABASE=true PAYLOAD_SEED_DATABASE=true yarn dev",
    "seed": "rm -rf ./storage && cross-env PAYLOAD_SEED_DATABASE=true yarn dev",
    "serve": "cross-env NODE_ENV=production PAYLOAD_CONFIG_PATH=dist/payload.config.js node dist/server.js",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=payload.config.ts payload generate:types",
    "generate:graphQLSchema": "cross-env PAYLOAD_CONFIG_PATH=payload.config.ts payload generate:graphQLSchema",
    "copyfiles": "copyfiles -u 1 \"cms/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/cms"
  },
  "dependencies": {
    "@lexical/clipboard": "0.12.2",
    "@lexical/list": "^0.12.2",
    "@lexical/rich-text": "^0.12.2",
    "@lexical/selection": "0.12.2",
    "@lexical/utils": "0.12.2",
    "@payloadcms/bundler-webpack": "^1.0.3",
    "@payloadcms/db-mongodb": "^1.0.3",
    "@payloadcms/richtext-lexical": "^0.1.11",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.3.1",
    "escape-html": "^1.0.3",
    "express": "^4.18.2",
    "jss": "^9.0.0",
    "jss-global": "^3.0.0",
    "lexical": "^0.12.2",
    "next": "^13.5.4",
    "payload": "^2.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-jss": "^10.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/register": "^7.17.0",
    "@innovixx/eslint-config": "^1.1.0",
    "@types/express": "^4.17.11",
    "@types/node": "^18.7.18",
    "@types/react": "^16.9.56",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.11.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.0"
  }
}
